{
  "name": "phat-contract-starter-kit",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "test-deploy": "hardhat run --network mumbai ./scripts/mumbai/deploy.ts",
    "main-deploy": "hardhat run --network polygon ./scripts/polygon/deploy.ts",
    "test-set-attestor": "hardhat run --network mumbai ./scripts/mumbai/set-attestor.ts",
    "main-set-attestor": "hardhat run --network polygon ./scripts/polygon/set-attestor.ts",
    "test-push-request": "hardhat run --network mumbai ./scripts/mumbai/push-request.ts",
    "main-push-request": "hardhat run --network polygon ./scripts/polygon/push-request.ts",
    "test-push-malformed-request": "hardhat run --network mumbai ./scripts/mumbai/push-malformed-request.ts",
    "main-push-malformed-request": "hardhat run --network polygon ./scripts/polygon/push-malformed-request.ts",
    "test-verify": "hardhat verify --network mumbai --constructor-args mumbai.arguments.ts",
    "main-verify": "hardhat verify --network polygon --constructor-args polygon.arguments.ts",
    "build-function": "phat-fn build src/index.ts",
    "run-function": "phat-fn run dist/index.js",
    "localhost-node": "hardhat node",
    "localhost-test": "hardhat test",
    "localhost-deploy": "hardhat run --network localhost ./scripts/localhost/deploy.ts",
    "localhost-watch": "phat-fn watch",
    "localhost-push-request": "hardhat run --network localhost ./scripts/localhost/push-request.ts",
    "test-deploy-function": "phat-fn upload --coreSettings=https://api-v2-mumbai-live.lens.dev/",
    "main-deploy-function": "phat-fn upload --mode=production --coreSettings=https://api-v2.lens.dev/",
    "test-update-function": "phat-fn update",
    "main-update-function": "phat-fn update --mode=production",
    "postinstall": "patch-package"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.4.7",
    "@ethersproject/providers": "^5.4.7",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": ">=12.0.0",
    "chai": "^4.2.0",
    "ethers": "^5.4.7",
    "hardhat": "^2.11.2",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.0",
    "ts-node": ">=8.0.0",
    "typechain": "^8.1.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "4.9.3",
    "@phala/fn": "~0.2",
    "@phala/pink-env": "^1.0.13",
    "@phala/solidity": "^0.0.4",
    "dedent": "^1.5.1",
    "dotenv": "^16.0.3",
    "patch-package": "^8.0.0",
    "viem": "^1.19.3"
  }
}
